extends ../layout

block content
  div(class='content')
    form(class='form-horizontal')
      div(class='form-group')
        label(for='inpClientId', class='col-sm-2 control-label') Client Id
        div(class='col-sm-10')
          input(id='inpClientId', type='text', class='form-control', placeholder='Client Id' value='0000000037')
      div(class='form-group')
        label(for='inpContractId', class='col-sm-2 control-label') Contract Id
        div(class='col-sm-10')
          input(id='inpContractId', type='text', class='form-control', placeholder='Contract Id' value='Au99.99')
      div(class='form-group')
        label(for='inpBsFlag', class='col-sm-2 control-label') BS Flag
        div(class='col-sm-10')
          input(id='inpBsFlag', type='text', class='form-control', placeholder='BS Flag' value='1')
      div(class='form-group')
        label(for='inpEoFlag', class='col-sm-2 control-label') EO Flag
        div(class='col-sm-10')
          input(id='inpEoFlag', type='text', class='form-control', placeholder='EO Flag')
      div(class='form-group')
        label(for='inpShFlag', class='col-sm-2 control-label') SH Flag
        div(class='col-sm-10')
          input(id='inpShFlag', type='text', class='form-control', placeholder='SH Flag' value='1')
      div(class='form-group')
        label(for='inpStopPrice', class='col-sm-2 control-label') Stop Price
        div(class='col-sm-10')
          input(id='inpStopPrice', type='text', class='form-control', placeholder='Stop Price')
      div(class='form-group')
        label(for='inpPrice', class='col-sm-2 control-label') Price
        div(class='col-sm-10')
          input(id='inpPrice', type='text', class='form-control', placeholder='Price' value='255.55')
      div(class='form-group')
        label(for='inpQty', class='col-sm-2 control-label') Qty
        div(class='col-sm-10')
          input(id='inpQty', type='text', class='form-control', placeholder='Qty' value='1')
      div(class='form-group')
        label(for='inpOrderType', class='col-sm-2 control-label') Order Type
        div(class='col-sm-10')
          input(id='inpOrderType', type='text', class='form-control', placeholder='Order Type' value='0')
      div(class='form-group')
        label(for='inpOrderAttr', class='col-sm-2 control-label') Order Attr
        div(class='col-sm-10')
          input(id='inpOrderAttr', type='text', class='form-control', placeholder='Order Attr' value='0')
      div(class='form-group')
        label(for='inpTradePurpose', class='col-sm-2 control-label') Trade Purpose
        div(class='col-sm-10')
          input(id='inpTradePurpose', type='text', class='form-control', placeholder='Trade Purpose' value='01')
          
          
      div(class='form-group')
        div(class='col-sm-offset-2 col-sm-10')
          button(id='btnCreate', type='button', class='btn btn-primary') Create
          button(id='btnConnect' type='button' data-connect-text='Connect' data-disconnect-text='Disconnect' 
            class='btn btn-success' autocomplete='off') Connect
          span(id='lblConnectStatus' class='label label-warning') Disconnected
    
    table(id='tblOrder', class='display')
      thead
        tr
          th System No
          th Local No
          th Contract Id
          th BS
          th EO
          th SH
          th Price
          th Qty
          th Order Type
          th Order Attr
          th Order Time
          th Purpose



block custom-script
  script(src='/javascripts/dimple/manualTrading.js')
  
  
